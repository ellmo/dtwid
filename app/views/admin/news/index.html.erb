<h1>Listing News</h1>

<%= link_to 'New News', new_admin_news_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each_with_index do |news, index| %>
  <%= content_tag :tr,
      :class => ((index%2 == 1) ? 'odd_row ' : 'even_row ' ) do %>
    <td><%= news.title %></td>
    <td><%= raw news.content %></td>
    <td><%= news.user_id %></td>
    <td><%= link_to 'Show', [:admin, news] %></td>
    <td><%= link_to 'Edit', edit_admin_news_path(news) %></td>
    <td><%= link_to 'Destroy', [:admin, news], :confirm => 'Are you sure?', :method => :delete %></td>
  <% end %>
<% end %>
</table>

<br />

<%= link_to 'New News', new_admin_news_path %>
