<%= form_for(@submission) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= simple_form_for @submission do |f| %>
    <%= f.input :name, :required => true %>
    <% if current_user.admin? %>
      <%= f.association :map_author, :collection => MapAuthor.all(:order => 'nick'), :label_method => :nick, :include_blank => false, :required => true, :selected => current_user.map_author %>
    <% end %>
    <%= f.association :map_episode, :include_blank => false, :required => true %>
    <%= f.association :map_slot, :include_blank => false, :required => true %>
    <%= f.input :link, :as => :url, :required => true %>
    <%= f.button :submit, :class => "submit_button" %>
  <% end %>
<% end %>
